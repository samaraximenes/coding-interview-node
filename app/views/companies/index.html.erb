<p id="notice"><%= notice %></p>

<h1>Companhias</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= link_to 'Visualizar', company, class: 'btn btn-sm btn-outline-primary' %></td>
        <td><%= link_to 'Editar', edit_company_path(company), class: 'btn btn-sm btn-outline-warning' %></td>
        <td><%= link_to 'Excluir', company, method: :delete, class: 'btn btn-sm btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Companhia', new_company_path, class: 'btn btn-success' %>
